{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["test/**/*.(t|j)s"],
  "coverageDirectory": "./test/coverage",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>src/$1"
  }
}
