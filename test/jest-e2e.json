{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["test/**/*.(t|j)s"],
  "coverageDirectory": "./test/coverage",

  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>src/$1",
    "^@Base/(.*)$": "<rootDir>src/base/$1",
    "^@Database/(.*)$": "<rootDir>src/base/database/$1",
    "^@Health/(.*)$": "<rootDir>src/base/health/$1",
    "^@Throttler/(.*)$": "<rootDir>src/base/throttler/$1",
    "^@Core/(.*)$": "<rootDir>src/core/$1",
    "^@Tasks/(.*)$": "<rootDir>src/tasks/$1",
    "^@Emails/(.*)$": "<rootDir>src/tasks/emails/$1",
    "^@Utils/(.*)$": "<rootDir>src/utils/$1",
    "^@Auth/(.*)$": "<rootDir>src/utils/auth/$1",
    "^@Constants/(.*)$": "<rootDir>src/utils/constants/$1",
    "^@Decorators/(.*)$": "<rootDir>src/utils/decorators/$1",
    "^@Guards/(.*)$": "<rootDir>src/utils/guards/$1",
    "^@Validators/(.*)$": "<rootDir>src/utils/validators/$1"
  }
}
